# SentinelTranslate Environment Configuration
# Copy this file to .env and customize as needed

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_BROKER_DB=0
REDIS_BACKEND_DB=1

# Triton Configuration
TRITON_HOST=triton
TRITON_HTTP_PORT=8000
TRITON_GRPC_PORT=8001
TRITON_METRICS_PORT=8002

# Sidecar (FastAPI) Configuration
SIDECAR_HOST=0.0.0.0
SIDECAR_PORT=8080

# Celery Worker Configuration
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_LOGLEVEL=INFO

# Model Configuration
DEFAULT_SOURCE_LANG=fr
DEFAULT_TARGET_LANG=en

# Safety Configuration
HALLUCINATION_LENGTH_RATIO_THRESHOLD=2.5
HALLUCINATION_REPETITION_THRESHOLD=2
FALLBACK_TOKEN_LIMIT=30
